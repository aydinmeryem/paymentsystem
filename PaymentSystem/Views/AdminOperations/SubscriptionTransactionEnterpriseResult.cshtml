@model PaymentSystem.Models.EnterpriseDataModel
@{
    ViewBag.Title = "SubscriptionTransactionEnterpriseResult";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        if (@ViewBag.IsReload== true) {
            location.reload();
    }
    });

</script>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3>KULLANICI ABONELİK BİLGİLERİ</h3>
        </div>
        <div class="col-lg-12">
            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th>KULLANICI ADI</th>
                        <th>İSİM</th>
                        <th>TCKN</th>
                        <th>TELEFON</th>
                        <th>E-POSTA</th>
                        <th>Kalan Borç</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@ViewBag.usern</td>
                        <td>@ViewBag.name</td>
                        <td>@ViewBag.tckn</td>
                        <td>@ViewBag.phn</td>
                        <td>@ViewBag.mail</td>
                        @{
                            if (ViewBag.unpaidcount >= 1)
                            {
                                <td>@ViewBag.unpaidcount</td>
                            }
                            else
                            {
                                <td>Borç yok</td>
                            }
                        }
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-lg-12">
            @{
                if (ViewBag.unpaidcount >= 1)
                {
                    <p class="alert alert-danger"><a href="@Url.Action("SearchConsumerSubscriber","AdminOperations",new {tax_=ViewBag.tckn})" class="btn btn-danger">Borç Ödeme Sayfasına Git</a></p>
                }
                else
                {
                    <p class="alert alert-success"><a href="@Url.Action("CloseConsumerAccount","AdminOperations",new {tax_=ViewBag.tckn})" class="btn btn-success">Aboneliği Kapat</a></p>
                }
            }

        </div>
    </div>
</div>

