@model PaymentSystem.Models.EnterpriseDataModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script type="text/javascript">

    $(document).ready(function () {
        if (@ViewBag.IsReload== true) {
            location.reload();
    }
    });

</script>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3>ÖDENMİŞ FATURALAR LİSTESİ</h3>
        </div>
        <div class="col-lg-12">
            <table class="table table-responsive table-striped">
                <thead>
                    <tr>
                        <th>Creation Date</th>
                        <th>Due Date</th>
                        <th>Amount</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var paid in Model.EnterprsePaidInvoices)
                        {
                            <tr>
                                <td>@paid.creationdate</td>
                                <td>@paid.duedate</td>
                                <td>@paid.billamount</td>
                                <td><a href="@Url.Action("Details","EnterpriseBill",new { id=paid.bill_id})" class="btn btn-danger btn-sm product-detail float-right"><i class="fas fa-angle-double-right"></i>Ekstre Görüntüle</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h3>ÖDENMEMİŞ FATURALAR LİSTESİ</h3>
        </div>
        <div class="col-lg-12">
            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th>Fatura ID</th>
                        <th>Creation Date</th>
                        <th>Due Date</th>
                        <th>Amount</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var paid in Model.EnterpriseUnpaidInvoices)
                        {
                            <tr>
                                <td>@paid.bill_id</td>
                                <td>@paid.creationdate</td>
                                <td>@paid.duedate</td>
                                <td>@paid.billamount</td>
                                <td><a href="@Url.Action("PayInvoiceEnterprise","EnterpriseBill",new {tax=paid.tax_num, id=paid.bill_id})" class="btn btn-success">Faturayı Öde</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


